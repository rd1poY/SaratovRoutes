<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaratovRoutes.Views.WeatherPage"
             BackgroundColor="White"
             >
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <!-- Эта строка занимает оставшееся место на странице -->
            </Grid.RowDefinitions>

            <!-- Верхняя часть страницы с данными о погоде -->
            <StackLayout Grid.Row="0" Padding="20">
                <Label TextColor="Black" Text="Погода " 
       FontSize="70" 
       HorizontalOptions="Center" />
                <Label TextColor="Black" Text="Выберите город: " 
                       FontSize="Large" 
                       HorizontalOptions="Center" />
                <Frame BackgroundColor="White"
                       HasShadow="True"
                       CornerRadius="10"
                       Margin="0"
                       Padding="0"
                       >
                    <Picker TextColor="Black"
                            x:Name="cityPicker" 
                            Title="Города" />
                </Frame>
                <Label Margin="14,0,0,0" TextColor="Black" 
    x:Name="DescriptionLabel" 
        FontSize="30"
       Text="На данной странице вы можете узнать погоду в любом городе из городов, представленных в этом приложении."
                       FontAttributes="Italic"
        HorizontalOptions="Center" />
                <Image x:Name="weatherImage" 
                       WidthRequest="150" 
                       HeightRequest="150" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />

                <Label TextColor="Black"
                       x:Name="temperatureLabel" 
                       FontSize="30" 
                       HorizontalOptions="Center" />

                <Label TextColor="Black"
                       x:Name="feelsLikeLabel" 
                       FontSize="30"
                       HorizontalOptions="Center" />

                <Label TextColor="Black"
                       x:Name="humidityLabel" 
                       FontSize="30"
                       HorizontalOptions="Center" />

                <Label Margin="0,10,0,0" TextColor="Black" 
                       x:Name="weatherDescriptionLabel" 
                       FontSize="21"
                       HorizontalOptions="Center" />
                
            </StackLayout>

            <!-- Нижнее меню -->
            <StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center">
                <Frame BackgroundColor="White"
                       HasShadow="True"
                       CornerRadius="10"
                       Margin="2"
                       Padding="0"
                       BorderColor="Black">
                    <ImageButton Margin="20,0,20,0" BackgroundColor="White" Source="routes_icon.png" Clicked="ButtonRoutes_Clicked" WidthRequest="50" HeightRequest="50"
                                 Pressed="OnButtonPressed" Released="OnButtonReleased"/>
                </Frame>
                <Frame BackgroundColor="White"
                       HasShadow="True"
                       CornerRadius="10"
                       Margin="2"
                       Padding="0"
                       BorderColor="Black">
                    <ImageButton Margin="20,0,20,0" BackgroundColor="White" Source="map_icon.png" Clicked="ButtonMap_Clicked" WidthRequest="50" HeightRequest="50"
                                 Pressed="OnButtonPressed" Released="OnButtonReleased"/>
                </Frame>
                <Frame BackgroundColor="LightGray"
                       HasShadow="True"
                       CornerRadius="10"
                       Margin="2"
                       Padding="0"
                       BorderColor="Black">
                    <ImageButton Margin="20,0,20,0" BackgroundColor="LightGray" Source="weather_icon.png"  WidthRequest="50" HeightRequest="50"
                                 Pressed="OnButtonPressed" Released="OnButtonReleased"/>
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>