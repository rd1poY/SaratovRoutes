<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaratovRoutes.Views.AddRoutePage"
             Title="Добавить маршрут"
             BackgroundColor="#FFFFFF"
             >
    <ContentPage.Content>
        <Grid RowDefinitions="*,Auto">
            <!-- ScrollView для контента маршрута -->
            <ScrollView Grid.Row="0" VerticalScrollBarVisibility="Always">
                <StackLayout Padding="10">
                    <!-- Поля ввода -->
                    <Label TextColor="Black" Text="Введите название маршрута:" />
                    <Entry BackgroundColor="GhostWhite" PlaceholderColor="#80000000" x:Name="RouteName" TextColor="Black" Placeholder="Название маршрута" HeightRequest="40" />

                    <Label TextColor="Black" Text="Введите описание маршрута:" />
                    <Editor PlaceholderColor="#80000000"  BackgroundColor="GhostWhite" x:Name="RouteDescription" TextColor="Black"  Placeholder="Описание маршрута" HeightRequest="80" />

                    <!-- Карта и кнопка удаления последней точки -->
                    <StackLayout Orientation="Vertical">
                        <WebView x:Name="MapView" HeightRequest="350" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />
                        <Button Text="Удалить последнюю точку" Pressed="OnButtonPressed" Released="OnButtonReleased" BackgroundColor="Black" TextColor="White" Clicked="OnRemoveLastPointClicked" VerticalOptions="Start" Margin="10,0,0,0" />
                    </StackLayout>

                    <Label TextColor="Black" Text="Введите время маршрута:" />
                    <Entry PlaceholderColor="#80000000"  BackgroundColor="GhostWhite" x:Name="RouteTime" TextColor="Black"  Placeholder="время маршрута" HeightRequest="40" />
                </StackLayout>
            </ScrollView>
            <StackLayout BackgroundColor="White" VerticalOptions="End" HorizontalOptions="CenterAndExpand" Orientation="Vertical"
                         Padding="10,5,10,5" Margin="0,0,0,0">
                <Button Grid.Row="1" HeightRequest="50" WidthRequest="500" 
                        VerticalOptions="End" HorizontalOptions="FillAndExpand" BackgroundColor="Black" FontSize="16"
                        TextColor="White" Text="Добавить маршрут" Pressed="OnButtonPressed" Released="OnButtonReleased" Clicked="OnAddRouteClicked" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>